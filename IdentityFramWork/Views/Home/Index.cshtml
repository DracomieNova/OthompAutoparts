    <title>@ViewData["Title"]</title>


    <div class="text-center">
        <h1 class="display-4">Welcome to OthompAutoShop</h1>
    </div>

    <div class="image-container">
        <img src="/Image/logo.jpg" alt="Description of the image" width="100%">

        <div class="Description">
            <!-- Use a Panel control to contain the right-aligned image -->
            <asp:Panel runat="server" CssClass="right-aligned-image">
                <img src="~/Image/THEME_CAR.jpg" width="50%",  />
            </asp:Panel>

            <!-- Additional service description -->
            <div class="service-description">
                <b>
                <p>We specialize in car repairs and offer a wide range of services, including:</p>
                <ul>
                    <li>Engine diagnostics and repair</li>
                    <li>Brake system maintenance</li>
                    <li>Transmission services</li>
                    <li>Vehicle inspection and tune-ups</li>
                </ul>
                    <p>Additionally, we provide expert guidance on the purchase of high-quality car parts to ensure your vehicle's optimal performance.</p>
                </b>
            </div>
        </div>
        <asp:Panel runat="server" CssClass="">
            <img src="/Image/logo3.jpg" alt="" width="100%"/>
        </asp:Panel>
            <br>
        <asp:Panel runat="server" CssClass="">
            <img src="/Image/istockphoto.jpg" alt="" width="1000px" />
        </asp:Panel>


        <p>
            <b>
            Our services are authentic and truly transformative
            </b>
        </p>
    </div>


