@{
    ViewData["Title"] = "Home Page";
}


  
    <style>
        /* Additional inline styles for demonstration purposes */
        .image-container {
            display: flex;
            flex-direction: column; /* Stack images and text vertically */
            align-items: center; /* Center items horizontally */
           /*  text-align: center; /* Center text */ */

        }
       
        

        .right-aligned-image {
            width: 48%; /* Adjust the width as needed */
            margin-top: 10px; /* Add space between the images and text */
        }

        .service-description {
            max-width: 600px; /* Adjust the max-width as needed */
            margin-top: 20px; /* Add space between the text and images */
           /* justify-content:center; */
        }
       .Description {
           display:flex;
       }
